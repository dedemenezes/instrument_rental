<div class="container">
  <%  if params[:query].present? %>
    <h2>Results for '<%= params[:query].upcase %>'</h2>
  <% else %>
    <h2>Results for 'ALL INSTRUMENTS'</h2>
  <% end %>
  <p><%= Offer.count %> results</p>
  <% @offers.each do |offer| %>
    <%= link_to offer_path(offer) do %>
      <div class="card-result">
        <div class="card-image">
          <%= cl_image_tag offer.photos.first.key, width: 133 %>
        </div>
        <div class="card-description">
          <h4><%= offer.instrument %></h4>
          <p>Acreidto que vamos precisar de uma coluna de descrção no OFFER MODEL para poder exibir aqui o que o vendedor descreveu para seu produto.
          </p>
        </div>
        <div class="card-price">
          <p>$<%= offer.price.to_i %><span>/day</span></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
